<style>
  .nav-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #ccc;
  }
  
  .nav-bar h1 {
    margin: 0;
  }
  
  .nav-bar nav {
    display: flex;
    align-items: center;
  }
  
  .nav-bar nav a {
    margin-left: 1rem;
    text-decoration: none;
    color: #007bff;
  }
  
  .nav-bar nav a:hover {
    text-decoration: underline;
  }
  
  .cart-container {
    display: flex;
    align-items: center;
    margin-left: 1rem;
  }
  
  .cart-icon {
    margin-right: 0.5rem;
    cursor: pointer;
  }
  
  #clear-cart {
    background-color: #dc3545;
    color: white;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    border-radius: 5px;
  }
  
  .product-card {
    border: 1px solid #ccc;
    padding: 1rem;
    margin-bottom: 1rem;
  }
  
  .product-info {
    padding: 1rem;
    background-color: #f9f9f9;
    margin-bottom: 1rem;
  }
  
  .cart-button {
    background-color: #007bff;
    color: #fff;
    padding: 0.5rem 1rem;
    border: none;
    cursor: pointer;
  }
  
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>

<script>
  let cartCount = 0;
  const cartCountElement = document.getElementById('cart-count');
  const clearCartButton = document.getElementById('clear-cart');

  function updateCartCount(change) {
    cartCount += change;
    cartCountElement.textContent = cartCount;
  }

  function clearCart() {
    cartCount = 0;
    cartCountElement.textContent = cartCount;
  }

  document.addEventListener('DOMContentLoaded', () => {
    const addToCartButtons = document.querySelectorAll('.add-to-cart');
    addToCartButtons.forEach(button => {
      button.addEventListener('click', () => {
        updateCartCount(1);
      });
    });

    clearCartButton.addEventListener('click', clearCart);
  });
</script>