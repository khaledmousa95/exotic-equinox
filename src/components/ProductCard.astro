---
const { id, title, price } = Astro.props;
---
<div class="product-card">
  <h2>{title}</h2>
  <p>Price: ${price}</p>
  <button class="add-to-cart" data-product-id={id}>Add to Cart</button>
</div>

<style>
  .product-card {
    border: 1px solid #ccc;
    padding: 16px;
    margin: 8px;
    text-align: center;
  }
  img {
    width: 100%;
    height: auto;
  }
  button {
    margin-top: 10px;
    padding: 8px 12px;
    cursor: pointer;
  }
</style>
